{{#partial "title"}}
    Hero To Squad Page
{{/partial}}
{{#partial "content"}}
    <div class="viewer" style="background-image:url('https://images7.alphacoders.com/699/699169.jpg'); background-repeat: no-repeat; background-size: cover; background-position: cover;">
        <div class="jumbotron text-center">
            <h1 class="h1-reponsive text-info">Assigned Hero To Squad!</h1>
        <ul>
            <a type="submit" class="btn aqua-gradient text-white" href="/"><strong>Back to Home Page</strong></a>
        </ul>
        {{#if squads}}
            <ul class="list-group">
                {{#each squads}}
                    <li class="list-group-item">
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Squad Name: {{squad}}</strong></li>
                            <li class="list-group-item"><strong>Hero Name:</strong> <span>{{heroName}}>{{age}}-years old</span></li>
                            <li class="list-group-item"><strong>Size :</strong><span> {{size}} is the max number of heroes</span></li>
                        </ul>
                    </li>
                {{/each}}
            </ul>
     {{else}}
        <h4 class="h4-reponsive text-info animate fadeIn"><strong>No Hero has been assigned to a Squad!</strong></h4>
      {{/if}}
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}